@model List<BookStore.ViewModels.UserRoleViewModel>
@{
    ViewData["Title"] = "EditUsersInRoles";
    //var model = ViewBag.model;
    var roleId = ViewBag.roleId;
}

<h1>EditUsersInRoles</h1>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Add or Rmove Users from this role</h3>
        </div>
        <div class="card-body">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div>
                    <input asp-for="@Model[i].UserName" hidden />
                </div>
                <div>
                    <input asp-for="@Model[i].UserId" hidden />
                </div>
                <div>
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                </div>

            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"/>
            <a asp-action="EditeRole" asp-controller="Administration" asp-route-id="@roleId" class="btn btn-primary">Cancel</a>
        </div>

    </div>
</form>

