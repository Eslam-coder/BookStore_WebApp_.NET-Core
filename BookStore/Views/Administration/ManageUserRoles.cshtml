@model List<BookStore.ViewModels.UserRolesViewModel>
@{
    ViewData["Title"] = "ManageUserRoles";
    var userId = ViewBag.userId;
}

<h1>ManageUserRoles</h1>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Add or Rmove Users from this role</h3>
        </div>
        <div class="card-body">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div>
                    <input asp-for="@Model[i].RoleName" hidden />
                </div>
                <div>
                    <input asp-for="@Model[i].RoleId" hidden />
                </div>
                <div>
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
                </div>

            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@userId" class="btn btn-primary">Cancel</a>
        </div>

    </div>
</form>

